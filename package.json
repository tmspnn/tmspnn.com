{
    "name": "tmspnn.com",
    "version": "1.0.0",
    "description": "Frontend & gateway of tmspnn.com",
    "main": "app/pages/index/index.js",
    "scripts": {
        "test": "ava",
        "fmt": "npx prettier --write ./app",
        "fmt-test": "npx prettier --write test",
        "build": "NODE_ENV=production webpack",
        "dev": "webpack --watch"
    },
    "ava": {
        "files": [
            "test/**/*"
        ],
        "concurrency": 4,
        "failFast": true
    },
    "dependencies": {
        "dayjs": "^1.10.4",
        "events": "^3.3.0",
        "highlight.js": "^10.7.2",
        "js-base64": "^3.6.0",
        "k-dom": "^0.3.0",
        "k-util": "^0.3.1",
        "k-xhr": "^0.3.1",
        "lodash": "^4.17.21",
        "normalize.css": "^8.0.1",
        "qs": "^6.10.1",
        "spin.js": "^4.1.0",
        "validator": "^13.6.0"
    },
    "devDependencies": {
        "@babel/core": "^7.13.16",
        "@babel/plugin-proposal-class-properties": "^7.13.0",
        "@babel/preset-env": "^7.13.15",
        "autoprefixer": "^10.2.5",
        "ava": "^3.15.0",
        "babel-loader": "^8.2.2",
        "css-loader": "^5.2.4",
        "mini-css-extract-plugin": "^1.5.0",
        "postcss": "^8.2.10",
        "postcss-import": "^14.0.1",
        "postcss-loader": "^5.2.0",
        "postcss-scss": "^3.0.5",
        "precss": "^4.0.0",
        "prettier": "^2.2.1",
        "style-loader": "^2.0.0",
        "webpack": "^5.34.0",
        "webpack-cli": "^4.6.0"
    },
    "prettier": {
        "printWidth": 80,
        "tabWidth": 4,
        "useTabs": false,
        "semi": true,
        "singleQuote": false,
        "quoteProps": "consistent",
        "jsxSingleQuote": false,
        "trailingComma": "none",
        "bracketSpacing": true,
        "jsxBracketSameLine": true,
        "arrowParens": "always"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/tmspnn/tmspnn.com"
    },
    "keywords": [
        "tmspnn",
        "openresty",
        "lua",
        "rest"
    ],
    "author": "Thomas Peng Li",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/tmspnn/tmspnn.com/issues"
    },
    "homepage": "https://github.com/tmspnn/tmspnn.com#readme"
}
